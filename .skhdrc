# modes
:: win_resize @
:: win_move @
:: workspace @

# Focus Navigations
alt - k : yabai -m window --focus north
alt - j : yabai -m window --focus south
alt - h : yabai -m window --focus west || yabai -m display --focus prev
alt - l : yabai -m window --focus east || yabai -m display --focus next

# Float / Unfloat window
alt - space : \
    yabai -m window --toggle float; \
    yabai -m window --toggle border

# Full screen window or close
alt - b : yabai -m window --toggle native-fullscreen
alt - f : yabai -m window --toggle zoom-fullscreen
alt - q : yabai -m window --close

# Navigating Workspaces
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - p : yabai -m space --focus prev 
alt - n : yabai -m space --focus next 
# alt - p : yabai -m space --focus prev || yabai -m space --focus last
# alt - n : yabai -m space --focus next || yabai -m space --focus first

# manage spaces
alt - g ; workspace

workspace < n : yabai -m space --create && \
                yabai -m space --focus last; \
                skhd -k "space"

workspace < q : yabai -m space --destroy;\
                skhd -k "space"

workspace < space ; default

# Moving windows
alt - m ; win_move

## moving directions
win_move < h : yabai -m window --warp west;\
               skhd -k "space"

win_move < j : yabai -m window --warp south;\
               skhd -k "space"

win_move < k : yabai -m window --warp north;\
               skhd -k "space"

win_move < l : yabai -m window --warp east;\
               skhd -k "space"

## moving spaces
win_move < 1 : yabai -m window --space 1; \
               yabai -m space --focus 1;\
               skhd -k "space"

win_move < 2 : yabai -m window --space 2; \
               yabai -m space --focus 2;\
               skhd -k "space"

win_move < 3 : yabai -m window --space 3; \
               yabai -m space --focus 3;\
               skhd -k "space"

win_move < 4 : yabai -m window --space 4; \
               yabai -m space --focus 4;\
               skhd -k "space"

win_move < 5 : yabai -m window --space 5; \
               yabai -m space --focus 5;\
               skhd -k "space"

win_move < n : yabai -m window --space next; \
               yabai -m space --focus next;\
               skhd -k "space"

win_move < p : yabai -m window --space prev; \
               yabai -m space --focus prev;\
               skhd -k "space"

win_move < space ; default

# Resizing window
alt - r ; win_resize

win_resize < h : yabai -m window --win_resize left:-50:0; \
             yabai -m window --win_resize right:-50:0

win_resize < j : yabai -m window --win_resize bottom:0:50; \
             yabai -m window --win_resize top:0:50

win_resize < k : yabai -m window --win_resize top:0:-50; \
             yabai -m window --win_resize bottom:0:-50

win_resize < l : yabai -m window --win_resize right:50:0; \
             yabai -m window --win_resize left:50:0

win_resize < r : yabai -m space --balance; \
             skhd -k "space"

win_resize < space ; default
