## Theme and colors
theme = catppuccin-mocha
background = 1e1e2f

## Fonts
font-size = 13.5
font-family = ""
font-family = Maple Mono NF CN
font-codepoint-map = U+E000-U+F8FF=Meslo LG S

## Window config
window-padding-x = 5
window-padding-y = 5
window-save-state = never
window-decoration = true

## General config
cursor-style-blink = false
confirm-close-surface = false
working-directory = home
resize-overlay = never
mouse-hide-while-typing = true

copy-on-select = false
app-notifications = no-clipboard-copy

## Cell adjusts
adjust-cell-width = -7%
adjust-cell-height = -4%

adjust-cursor-thickness = 50%
adjust-box-thickness = 50%

adjust-underline-thickness = 40%
adjust-underline-position = 6

## Keybindings
keybind = clear

keybind = ctrl+a>r=reload_config

keybind = ctrl+a>t=new_tab
keybind = ctrl+a>p=previous_tab
keybind = ctrl+a>n=next_tab
keybind = ctrl+a>ctrl+p=move_tab:-1
keybind = ctrl+a>ctrl+n=move_tab:+1
keybind = ctrl+a>q=close_surface

keybind = ctrl+a>v=new_split:right
keybind = ctrl+a>s=new_split:down

keybind = ctrl+a>k=goto_split:top
keybind = ctrl+a>j=goto_split:bottom
keybind = ctrl+a>l=goto_split:right
keybind = ctrl+a>h=goto_split:left
keybind = ctrl+a>z=toggle_split_zoom

keybind = ctrl+a>ctrl+k=resize_split:up,20
keybind = ctrl+a>ctrl+j=resize_split:down,20
keybind = ctrl+a>ctrl+h=resize_split:left,20
keybind = ctrl+a>ctrl+l=resize_split:right,20

keybind = ctrl+a>ctrl+left_bracket=increase_font_size:1
keybind = ctrl+a>ctrl+right_bracket=decrease_font_size:1
keybind = ctrl+a>ctrl+m=reset_font_size

keybind = ctrl+a>shift+a=inspector:toggle

keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard

config-file = ?macos
